# Tutor Learning App Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# iMessage Kit Configuration
IMESSAGE_BUNDLE_ID=com.tutor.learning
IMESSAGE_AUTH_TOKEN=your_imessage_auth_token_here

# SMS Configuration (for production)
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_here

# OpenAI Configuration (for AI tutoring)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (for production)
MONGODB_URI=mongodb://localhost:27017/tutor
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# External APIs
REVERSO_API_KEY=your_reverso_api_key_here
LINGUEE_API_KEY=your_linguee_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Feature Flags
ENABLE_SMS=true
ENABLE_AI_TUTOR=true
ENABLE_SOCIAL_FEATURES=false